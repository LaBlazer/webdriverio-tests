    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run with debug",
            "port": 5859,
            "timeout": 60000,
            "trace": true,
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/wdio",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": [
                "wdio-debug.conf.js"
            ],
            "env": {
                "DEBUG": "true" 
            }
        }
    ]
    
}